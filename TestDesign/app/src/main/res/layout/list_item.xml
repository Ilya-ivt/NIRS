<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:layout_marginTop="5px"
                android:layout_marginBottom="10px"
                android:background="@drawable/texst_list_style2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Number"
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="@drawable/texst_list_style"
                    android:fontFamily="@font/droid_sans_mono"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="45sp"
                    android:textStyle="bold|italic" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15px"
                    android:layout_marginBottom="15px">

                    <TextView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="240px"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="15px"
                        android:layout_marginRight="15px"
                        android:layout_marginBottom="15px"
                        android:background="@color/silver"
                        android:fontFamily="@font/droid_sans_mono"
                        android:gravity="center_vertical"
                        android:paddingLeft="40px"
                        android:text="Культура как специфически
                        человеческий способ бытия в мире.
                        Культура как система. "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>